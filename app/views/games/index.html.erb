<h1>Listing Games</h1>

<table class="round center">
  <tr>
    <th>Name</th>
    <th>Start Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><nobr><%= h game.name %></nobr></td>
    <td><nobr><%= game.kickoff.strftime("%m/%d/%Y %h:%m") %></nobr></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

